<Page
    x:Class="App1.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data ="using:App1.Classes"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <GridView x:ConnectionId='1' IsItemClickEnabled="True" Name="grid1" HorizontalAlignment="Left" Width="1400" VerticalAlignment="Stretch"  BorderThickness="1" BorderBrush="Black"                            >
            <GridView.ItemTemplate>
                <DataTemplate                        >
                    <StackPanel x:ConnectionId='12'>
                        <TextBlock x:ConnectionId='13' FontSize="18"                    HorizontalAlignment="Center"                              />
                        <TextBlock x:ConnectionId='14' FontSize="18"                          HorizontalAlignment="Left"/>
                        <TextBlock x:ConnectionId='15' FontSize="18"                           HorizontalAlignment="Left"/>
                        <TextBlock x:ConnectionId='16' FontSize="18"                          HorizontalAlignment="Left"/>
                        <TextBlock x:ConnectionId='17' FontSize="18"                          HorizontalAlignment="Left"/>
                        <TextBlock x:ConnectionId='18' FontSize="18"                       HorizontalAlignment="Left"/>
                        <TextBlock x:ConnectionId='19' FontSize="18"                         HorizontalAlignment="Left"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <Button x:ConnectionId='2' Name="back" Width="300" Height="100" HorizontalAlignment="Left" Margin="1610,912,0,0" Grid.RowSpan="2" VerticalAlignment="Top">Back</Button>
        <TextBlock x:ConnectionId='3' Name="userNameLabel" Height="50" Width="150" FontSize="30" TextAlignment="Right" Margin="1457,200,313,737"  Visibility="Collapsed">UserName:</TextBlock>
        <TextBox x:ConnectionId='4' Name="userNameText" Height="50" Width="150" FontSize="30" TextAlignment="Left" Margin="1685,200,85,730" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='5' Name="firstNameLabel" Height="50" Width="150" FontSize="30" TextAlignment="Right" Margin="1457,300,313,630" Visibility="Collapsed">FirstName:</TextBlock>
        <TextBox x:ConnectionId='6' Name="firstNameText" Height="50" Width="150" FontSize="30" TextAlignment="Left" Margin="1685,300,85,626" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='7' Name="lastNameLabel" Height="50" Width="150" FontSize="30" TextAlignment="Right" Margin="1457,400,313,530" Visibility="Collapsed">LastName:</TextBlock>
        <TextBox x:ConnectionId='8' Name="lastNameText" Height="50" Width="150" FontSize="30" TextAlignment="Left" Margin="1685,400,85,526" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed"/>
        <TextBlock x:ConnectionId='9' Name="PasswordLabel" Height="50" Width="150" FontSize="30" TextAlignment="Right" Margin="1457,500,313,430" Visibility="Collapsed">Password</TextBlock>
        <TextBox x:ConnectionId='10' Name="PasswordText" Height="50" Width="150" FontSize="30" TextAlignment="Left" Margin="1685,500,85,426" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed"/>
        <Button x:ConnectionId='11' Name="updateButton"  Height="50" Width="150" FontSize="30" HorizontalAlignment="Center" Margin="1514,600,85,326" Visibility="Collapsed"                           >Update</Button>
    </Grid>

</Page>

